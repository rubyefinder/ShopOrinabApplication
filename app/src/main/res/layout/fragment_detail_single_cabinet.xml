<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/lnParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color_background_toolbar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_1"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/iran_sans"
                        android:textColor="@color/grey_60"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <androidx.constraintlayout.utils.widget.ImageFilterButton
                        android:id="@+id/img_btn_back"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="end"
                        android:background="@color/transparent"
                        android:rotation="180"
                        android:tint="@color/grey_60"
                        app:srcCompat="@drawable/ic_arrow_back" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:scrollbars="none"
                android:scrollingCache="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/imageSlider"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            app:layout_constraintDimensionRatio="W,4:4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:sliderAnimationDuration="600"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderIndicatorAnimationDuration="600"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="#5A5A5A"
                            app:sliderIndicatorUnselectedColor="#FFF"
                            app:sliderScrollTimeInSec="1"
                            app:sliderStartAutoCycle="true" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcSubSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageSlider" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_1"
                            android:layout_marginTop="@dimen/margin_2"
                            android:background="@color/background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_16">

                        <TextView
                            android:id="@+id/txtUrl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            tools:text="@string/app_name" />

                        <View
                            android:layout_width="@dimen/margin_1"
                            android:layout_height="@dimen/margin_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtModel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                    android:textColor="@color/primary_text"
                                    android:textStyle="bold"
                                    tools:text="@string/app_name" />

                                <View
                                    android:layout_width="@dimen/margin_8"
                                    android:layout_height="@dimen/margin_1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/category_title"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                    android:textColor="@color/secondary_text" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/margin_1"
                                android:layout_height="@dimen/margin_8" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtProductCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                    android:textColor="@color/primary_text"
                                    android:textStyle="bold"
                                    tools:text="@string/app_name" />

                                <View
                                    android:layout_width="@dimen/margin_8"
                                    android:layout_height="@dimen/margin_1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/product_code_title"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                    android:textColor="@color/secondary_text" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/margin_1"
                                android:layout_height="@dimen/margin_8" />

                            <LinearLayout
                                android:id="@+id/lnParentDiscountPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtDiscountPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                    android:textColor="@color/primary_text"
                                    android:textStyle="bold"
                                    tools:text="@string/app_name" />

                                <View
                                    android:layout_width="@dimen/margin_8"
                                    android:layout_height="@dimen/margin_1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/discount_price_title"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                    android:textColor="@color/secondary_text" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/margin_1"
                                android:layout_height="@dimen/margin_8" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                    android:textColor="@color/primary_text"
                                    android:textStyle="bold"
                                    tools:text="@string/app_name" />

                                <View
                                    android:layout_width="@dimen/margin_8"
                                    android:layout_height="@dimen/margin_1" />

                                <TextView
                                    android:id="@+id/txtDiscounted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/price_title"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                    android:textColor="@color/secondary_text" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/margin_1"
                                android:layout_height="@dimen/margin_8" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:layout_marginTop="@dimen/margin_2"
                                android:layout_marginBottom="@dimen/margin_2"
                                android:background="@color/background" />

                            <TextView
                                android:id="@+id/txtDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="@color/primary_text"
                                tools:text="@string/app_name"
                                tools:ignore="UnusedAttribute" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:layout_marginTop="@dimen/margin_2"
                                android:layout_marginBottom="@dimen/margin_2"
                                android:background="@color/background" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_40"
                                android:drawableEnd="@drawable/ic_directions_car"
                                android:gravity="center"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:focusable="true"
                                android:drawablePadding="@dimen/margin_8"
                                android:text="@string/free_delivery_from_resellers"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="@color/primary_text"
                                app:rippleColor="@color/ripple_button" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_40"
                                android:drawableEnd="@drawable/ic_location_on"
                                android:gravity="center"
                                android:background="@drawable/ripple_effect"
                                android:clickable="true"
                                android:focusable="true"
                                android:drawablePadding="@dimen/margin_8"
                                android:text="@string/resellers"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="@color/primary_text"
                                app:rippleColor="@color/ripple_button" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:layout_marginTop="@dimen/margin_2"
                                android:layout_marginBottom="@dimen/margin_2"
                                android:background="@color/background" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:layout_height="wrap_content">
                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/txtSize"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/margin_8"
                                            tools:text="@string/app_name"
                                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                            android:textColor="@color/primary_text" />

                                    </LinearLayout>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/product_size"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtColor"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/color"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtPiece"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/piece"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnThickness"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtThickness"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/thickness"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnAerialHeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtAerialHeight"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/aerial_height"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnAerialDepth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtAerialDepth"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/aerial_depth"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/lnGroundHeight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtGroundHeight"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/ground_height"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnGroundDepth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtGroundDepth"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/ground_depth"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnBase"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtBase"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/base"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnScreenDepth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtScreenDepth"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/screen_depth"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnScreen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtScreen"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/screen"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/lnKnobs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtKnobs"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/knobs"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/txtValidPiece"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        tools:text="@string/app_name"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/primary_text" />

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/margin_8"
                                        android:gravity="start"
                                        android:layout_weight="1"
                                        android:text="@string/valid_piece"
                                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                        android:textColor="@color/secondary_text" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_1"
                                android:layout_marginTop="@dimen/margin_2"
                                android:layout_marginBottom="@dimen/margin_2"
                                android:background="@color/background" />

                            <TextView
                                android:id="@+id/txtDescriptionAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="@color/primary_text"
                                tools:text="@string/app_name"
                                tools:ignore="UnusedAttribute" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_2"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewProduct"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/view_product"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    app:backgroundTint="@color/accent"
                    app:cornerRadius="@dimen/margin_4"
                    app:rippleColor="@color/primary_dark"
                    app:strokeColor="@color/color_disable_button" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lnProgressContinuation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:background="@drawable/button_primary_shape"
                    android:visibility="gone">

                    <com.orinab.shoporinab.utils.custom_view.progress_bar.ViewLoadingDotsBounce
                        android:id="@+id/viewLoadingDotsBounce"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View

                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_middle" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.orinab.shoporinab.utils.custom_view.progress_bar.ViewLoadingDotsBounce
        android:id="@+id/vLoading"
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:layout_gravity="center" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
